{
  "name": "threadverse",
  "version": "1.0.0",
  "description": "A JavaScript library for multithreading",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "debug": "nodemon --exec node --inspect=0.0.0.0:9229 --require ts-node/register src/index.ts",
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.{ts,js,jsx,json}\"",
    "lint": "eslint src/**/*.*",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A .",
    "postversion": "git push && git push --tags",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biswasray/threadverse.git"
  },
  "keywords": [
    "thread",
    "multithreading",
    "worker",
    "thread-pool"
  ],
  "author": "Subhasish Biswasray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/biswasray/threadverse/issues"
  },
  "homepage": "https://github.com/biswasray/threadverse#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "sequelize-auto": "^0.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
